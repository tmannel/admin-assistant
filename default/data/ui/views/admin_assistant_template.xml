<form theme="light" stylesheet="admin_assistant_stylesheet.css">
  <label>Admin Assistant Template</label>
  <description>Use this dashboard as a repository for panels, inputs, CSS, and more. When editing the Admin Assistant app, either clone panels or copy the XML from here.</description>
  <search id="baseSearch_1">
    <!-- Base Search 1 -->
    <query>| makeresults count=100
| streamstats count as id 
| eval _time = now() - 86400*id
| eval foo = random() % 10</query>
    <earliest>$timepicker.earliest$</earliest>
    <latest>$timepicker.latest$</latest>
  </search>
  <!-- End Base Search 1 -->
  <search id="baseSearch_list_sourcetypes">
    <!-- List sourcetypes base search -->
    <query>| metadata type=sourcetypes</query>
    <earliest>$timepicker.earliest$</earliest>
    <latest>$timepicker.latest$</latest>
  </search>
  <!-- End sourcetypes base search -->
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="timepicker">
      <label>Time Range</label>
      <default>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="splunk_server_token">
      <label>splunk_server</label>
      <prefix>splunk_server IN (</prefix>
      <suffix>)</suffix>
      <delimiter>, </delimiter>
      <fieldForLabel>splunk_server</fieldForLabel>
      <fieldForValue>splunk_server</fieldForValue>
      <search>
        <query>| rest servicesNS/-/-/server/info
| dedup splunk_server
| fields splunk_server</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <choice value="*">All</choice>
      <initialValue>*</initialValue>
    </input>
    <input type="multiselect" token="index_token">
      <label>Index</label>
      <choice value="* NOT index=&quot;_*&quot;">All non-internal</choice>
      <choice value="*">All</choice>
      <choice value="&quot;_*&quot;">All internal</choice>
      <default>"* NOT index=""_*"""</default>
      <fieldForLabel>title</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <search>
        <query>|  rest services/data/indexes
| fields title
| dedup title</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <delimiter> </delimiter>
    </input>
    <input type="multiselect" token="sourcetype_token">
      <label>Sourcetype</label>
      <choice value="*">All</choice>
      <prefix>sourcetype IN (</prefix>
      <suffix>)</suffix>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
      <delimiter>,  </delimiter>
      <search base="baseSearch_list_sourcetypes">
        <query>|fields sourcetype</query>
      </search>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="host_token">
      <label>Host</label>
      <prefix>host IN (</prefix>
      <suffix>)</suffix>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel id="html_header1">
      <!-- HTML Header -->
      <html>
            <h1 align="center">Data Overview</h1>
            <p align="center">Tip: Put KPIs here in tables and single numbers.</p>
        </html>
    </panel>
  </row>
  <row>
    <panel>
      <single>
        <title>Sourcetypes Seen</title>
        <search>
          <query>| metadata type=sourcetypes index=*
| stats dc(sourcetype)</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Hosts Seen</title>
        <search>
          <query>| metadata type=hosts index=*
| stats dc(host)</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Indexes Seen</title>
        <search>
          <query>|  rest services/data/indexes
| fields title
| dedup title
| stats dc(title)</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Hosts</title>
      <table>
        <title>Found $host_count$ hosts in $host_count_duration$ seconds.</title>
        <search>
          <progress>
            <set token="host_count">$job.resultCount$</set>
            <set token="host_count_duration">$job.runDuration$</set>
          </progress>
          <query>| metadata type=hosts index=* 
| foreach *Time 
    [ rename &lt;&lt;FIELD&gt;&gt; as _time 
    | reltime 
    | rename reltime as &lt;&lt;FIELD&gt;&gt;_reltime 
    | eval _time = strftime(_time, "%Y-%m-%d %H:%M:%S") 
    | rename _time as &lt;&lt;FIELD&gt;&gt;]
| table host firstTime* lastTime* totalCount
| sort - totalCount</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">true</option>
        <format type="number" field="totalCount">
          <option name="precision">0</option>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel id="html_header2">
      <!-- HTML Header -->
      <html>
        <h1 align="center">Data Over Time</h1>
        <p align="center">Tip: multiple timecharts can be useful for correlating data.</p>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <input type="dropdown" token="span_token" searchWhenChanged="true">
        <label>Span</label>
        <choice value="">auto</choice>
        <choice value="span=1s">1s</choice>
        <choice value="span=15s">15s</choice>
        <choice value="span=1m">1m</choice>
        <choice value="span=15m">15m</choice>
        <choice value="span=1h">1h</choice>
        <choice value="span=4h">4h</choice>
        <choice value="span=1d">1d</choice>
        <choice value="span=1w">1w</choice>
        <choice value="span=1mo">1mo</choice>
        <prefix>span=</prefix>
        <default></default>
      </input>
      <chart>
        <search>
          <query>| tstats prestats=t count as foo where index=_internal by _time sourcetype $span_token$
| timechart $span_token$ count by sourcetype</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</form>
